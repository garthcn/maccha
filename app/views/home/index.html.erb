<script>
(function() {
    var $slides = $('#featured-items');
    $slides.carousel({
        // interval: 3000
    });

    var $adc = $('.ad-content'),
        $ad = $adc.parent(),
        $close = $ad.find('.close'),
        $closeText = $close.find('em');

    if ($ad.hasClass('no-ad')) return;
    function anim() {
        if ($adc.hasClass('showed')) {
            $closeText.text('Show Ads');
            $adc.removeClass('showed');
        } else {
            $closeText.text('Close Ads');
            $adc.addClass('showed');
        }
    }
    setTimeout(anim, 1000);
    $close.click(function(e) {
        anim();
        e.preventDefault();
    });
}());
</script>

