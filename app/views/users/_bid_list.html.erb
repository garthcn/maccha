<div>
<% if @user_bids.empty? %>
  <span>No Bid found.</span>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th>
          Item
        </th>
        <th>
          Price
        </th>
        <th>
          Status
        </th>
      </tr>
    </thead>
    <tbody>
    <% @user_bids.each do |bid| %>
      <tr>
        <td>
          <%= bid.item.name %>
        </td>
        <td>
          <%= bid.price %>
        </td>
        <td>
          <% if bid.status== 1 %>
            <%= "You Won" %>
          <% elsif bid.status==2 %>
            <%= "You Lose" %>
          <% else %>
            <%= "Pending" %>
          <%end%>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
</div>
