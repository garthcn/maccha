<div class='well'>
<% if @user_bids.empty? %>
  <span>No Bid found.</span>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <td>
          Item
        </td>
        <td>
          Price
        </td>
        <td>
          Status
        </td>
      </tr>
    </thead>
    <tbody>
    <% @user_bids.each do |bid| %>
      <tr>
        <td>
          <%= bid.item.name %>
        </td>
        <td>
          <%= bid.price %>
        </td>
        <td>
          <%= bid.status %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
</div>
