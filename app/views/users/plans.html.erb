<div id="billing" class="billing-dlg modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Billing Information</h3>
  </div>
  <form action="#url" method="post">
    <div class="modal-body">
      <div class="plan">
        You are now activating <strong>Maccha Bronze</strong>
        <input type="hidden" name="buyer_type" value="2"><!-- buyer type -->
        <input type="hidden" name="seller_type" value="0"><!-- seller type -->
      </div>
      <div class="control-group">
        <label class="control-label" for="billing_cc">Credit Card</label>
        <div class="controls">
          <input type="text" id="billing_cc" name="billing[cc]">
          <span class="help-inline"></span>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="billing_paypal">PayPal</label>
        <div class="controls">
          <input type="text" id="billing_paypal" name="billing[paypal]">
          <span class="help-inline"></span>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="billing_addr">Billing Address</label>
        <div class="controls">
          <input type="text" id="billing_addr" name="billing[billing_addr]">
          <span class="help-inline"></span>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="shipping_addr">Shipping Address</label>
        <div class="controls">
          <input type="text" id="shipping_addr" name="billing[shipping_addr]">
          <span class="help-inline"></span>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <span>Is this information correct?</span>
      <input type="submit" class="btn btn-success" value="Yes, pay now!">
      <a href="#" class="btn" data-dismiss="modal">Cancel</a>
    </div>
  </form>
</div>

