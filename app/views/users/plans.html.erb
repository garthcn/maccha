<div class="plans-container box-wrap">
  <div class="plans box">
    <h2>Plans & Pricing</h2>
    <div class="current-plans clearfix">
      <h3>Your Current Plan(s)</h3>
      <div class="plan-box buyer pull-left">
        <h4>Buyer: <%= @buyer_plan[:name] %></h4>
        <p class="price">$<strong><%= @buyer_plan[:price] %></strong><em>/mo.</em></p>
        <ul class="capabilities">
        <% @buyer_plan[:features].each do |f| %>
          <li><%= f %></li>
        <% end %>
        </ul>
        <% if @buyer_type > 0 %>
        <p class="actions"><a href="<%= users_deactivate_path + '?buyer_type=' + @buyer_type.to_s %>" class="btn deactivate">Deactivate</a></p>
        <% end %>
      </div>
      <div class="plan-box seller pull-left">
        <h4>Seller: <%= @seller_plan[:name] %></h4>
        <p class="price">$<strong><%= @seller_plan[:price] %></strong><em>/mo.</em></p>
        <ul class="capabilities">
        <% @buyer_plan[:features].each do |f| %>
          <li><%= f %></li>
        <% end %>
        </ul>
        <% if @seller_type > 0 %>
        <p class="actions"><a href="<%= users_deactivate_path + '?seller_type=' + @seller_type.to_s %>" class="btn deactivate">Deactivate</a></p>
        <% end %>
      </div>
      <div class="plan-box billing pull-right">
        <h4>Billing Info</h4>
          <p class="curr-fee">
          Current monthly fee: <strong>$<%= @buyer_plan[:price] + @seller_plan[:price] %>/mo</strong>
          </p>
        <% if not @no_billing %>
          <!--
          <p class="card"><strong>American Express</strong> ending in <strong>1018</strong></p>
          -->
          <p class="card"><img src="http://pics.ebaystatic.com/aw/pics/logos/logoPayPal_51x14.gif" alt="PayPal"> <strong><%= @billing.paypal %></strong></p>
          <!--
          <p class="actions"><a href="#" class="btn change-billing">Change Billing Info</a></p>
          -->
        <% else %>
          <p>You have no billing information right now.</p>
        <% end %>
      </div>
    </div>
    <div class="buyer-plans clearfix">
      <h3>Buyer Plans</h3>
      <% (1..3).each do |i| %>
        <% p = @buyer_plans[i] %>
        <div class="plan-box buyer-plan pull-left">
          <h4><%= p[:name] %></h4>
          <p class="price">$<strong><%= p[:price] %></strong><em>/mo.</em></p>
          <ul class="capabilities">
            <% p[:features].each do |f| %>
              <li><%= f %></li>
            <% end %>
          </ul>
          <p class="actions">
          <a href="#billing" class="btn activate" data-toggle="modal"
            data-btype="<%= i %>" data-name="<%= p[:name] %>">Activate</a>
          </p>
        </div>
      <% end %>
    </div>
    <div class="seller-plans clearfix">
      <h3>Seller Plans</h3>
      <% (1..3).each do |i| %>
        <% p = @seller_plans[i] %>
        <div class="plan-box seller-plan pull-left">
          <h4><%= p[:name] %></h4>
          <p class="price">$<strong><%= p[:price] %></strong><em>/mo.</em></p>
          <ul class="capabilities">
            <% p[:features].each do |f| %>
              <li><%= f %></li>
            <% end %>
          </ul>
          <p class="actions">
          <a href="#billing" class="btn activate" data-toggle="modal"
            data-stype="<%= i %>" data-name="<%= p[:name] %>">Activate</a>
          </p>
        </div>
      <% end %>
    </div>
    <!--
    <div class="billing">
      <h3>Your Billing Information</h3>
    </div>
    -->
  </div>
</div>

<div id="billing" class="billing-dlg modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Billing Information</h3>
  </div>
  <%= form_for(@billing) do |form| %>
    <div class="modal-body">
      <div class="plan">
        You are now activating <strong>Maccha Bronze</strong>
        <input type="hidden" id="buyer_type" name="buyer_type" value="2"><!-- buyer type -->
        <input type="hidden" id="seller_type" name="seller_type" value="0"><!-- seller type -->
      </div>
      <!--
      <div class="control-group">
        <label class="control-label" for="billing_cc">Credit Card</label>
        <div class="controls">
          <%= form.text_field :cc %>
          <span class="help-inline"></span>
        </div>
      </div>
      -->
      <div class="control-group">
        <label class="control-label" for="billing_paypal">PayPal</label>
        <div class="controls">
          <%= form.email_field :paypal %>
          <span class="help-inline"></span>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="billing_addr">Billing Address</label>
        <div class="controls">
          <%= form.text_field :billing_addr %>
          <span class="help-inline"></span>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="shipping_addr">Shipping Address</label>
        <div class="controls">
          <%= form.text_field :shipping_addr %>
          <span class="help-inline"></span>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <span>Is this information correct?</span>
      <input type="submit" class="btn btn-success" value="Yes, pay now!">
      <a href="#" class="btn" data-dismiss="modal">Cancel</a>
    </div>
  <% end %>
</div>

