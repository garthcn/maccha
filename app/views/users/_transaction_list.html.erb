<div class='well'>
<% if @user_transactions.empty? %>
  <span>No Transactions found.</span>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th>
          Item
        </th>
        <th>
          Price
        </th>
        <th>
          Shipped?
        </th>
      </tr>
    </thead>
    <tbody>
    <% @user_transactions.each do |transaction| %>
      <tr>
        <td>
          <%= transaction.item.name %>
        </td>
        <td>
          <%= transaction.price %>
        </td>
        <td>
          <%= transaction.is_shipped ? 'Yes' : 'No' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
</div>

