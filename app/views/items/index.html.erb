<h1>Listing items</h1>

<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Price</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Condition</th>
    <th>Location</th>
    <th>Description</th>
    <th>Seller</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.category %></td>
    <td><%= item.price %></td>
    <td><%= item.start_time %></td>
    <td><%= item.end_time %></td>
    <td><%= item.condition %></td>
    <td><%= item.location %></td>
    <td><%= item.description %></td>
    <td><%= item.seller_id %></td>
    <td><%= link_to 'Show', item, class: 'btn' %></td>
    <td><%= link_to 'Edit', edit_item_path(item), class: 'btn' %></td>
    <td><%= link_to 'Remove', item, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Item', new_item_path, class: 'btn' %>
