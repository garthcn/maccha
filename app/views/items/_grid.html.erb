<div class="list-container container">
  <div class="items box">
    <h2><%= yield :htitle %></h2>
    <ul class="clearfix">
      <% @items.each do |item| %>
        <li class="item-grid">
        <a href="<%= url_for item %>" title="View item">
          <div class="item-img">
            <%= image_tag item.picture.url(:small) %>
          </div>
          <div class="item-info">
            <p class="name"><%= item.name %></p>
            <p class="price">$ <%= item.price %></p>
          </div>
        </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>

