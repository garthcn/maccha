<div class="list-container container">
  <div class="items box">
    <h2><%= yield :htitle %></h2>
    <% if @items.empty? %>
      <h3>Oops...</h3>
      <p>I tried so hard but I haven't found anything.</p>
    <% else %>
      <ul class="clearfix">
        <% @items.each do |item| %>
          <li class="item-grid">
          <a href="<%= url_for item %>" title="View item">
            <div class="item-img">
              <%= image_tag item.picture.url(:small) %>
            </div>
            <div class="item-info">
              <p class="name"><%= item.name %></p>
              <p class="price">$ <%= sprintf("%.2f", item.price) %></p>
            </div>
          </a>
          </li>
        <% end %>
      </ul>
      <div class="pagination">
        <ul>
          <li><a href="#">First</a></li>
          <li><a href="#">Prev</a></li>
          <li><a href="#">1</a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li><a href="#">4</a></li>
          <li><a href="#">Next</a></li>
          <li><a href="#">Last</a></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>

